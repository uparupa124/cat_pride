<div class="container">
 
  <h3 style="margin-top: 40px; margin-bottom: 40px;"><%= attachment_image_tag current_user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:"50x50" %><%= current_user.user_name %></h3>
 <div class="row mt-10">
  <div>
   <%# ここからエラーメッセージ %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2 class="text-danger"><%= pluralize(@post.errors.count, "error") %> prohibited this Post from being saved:</h2>

        <ul>
            <% @post.errors.full_messages.each do |message| %>
             <li class="text-danger"><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  <%# ここまでエラーメッセージ %>
  <h5>新規投稿</h5>
  <%= form_with model: @post, local: true do |f| %>
    <table class="table">
      <tbody>
        <tr>
         <td><%= f.label :"画像" %></td>
         <td><%= f.attachment_field :image %></td>
        </tr>
          <tr>
           <td><%= f.label :"動画" %></td>
           <td><%= f.file_field :video_id, :accept => "video_id/*" %></td>
          </tr>
            <tr>
             <td><%= f.label :"本文" %></td>
             <td><%= f.text_area :body %></td>
            </tr>
      </tbody>
    </table>
     <div class="text-center">
       <%= f.submit "投稿", class: "btn btn-secondary" %>
     </div>
  <% end %>
  </div>
  
  <div>
    <div class="mt-5" style="margin-left: 700px;">
      <div>
        <a class="btn btn-primary" href="/">Followingsのみ表示</a>
      </div>
       <br>
         <div>
           <a class="btn btn-primary" href="/favorite_posts">いいねした投稿を表示</a>
         </div>
    </div>
   <% @posts.each do |post| %>
    <div class="border mt-5" style="width: 60%; margin: 0 auto;">
     <div class="mb-2 mt-2 pl-2">
       <%= attachment_image_tag post.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:"30x30" %><%= link_to post.user.user_name, user_path(post) %>
     </div>
       <div>
        <div>
         <a href = "/posts/<%= post.id %>"><%= attachment_image_tag post, :image, width: "100%", height: "100%" %></a>
        </div>
       </div>
         <% if post.video_id.present? != false %>
        <div>
          <%= link_to post.video_id.url.to_s do %>
           <%= video_tag(post.video_id.to_s, width: "100%", height: "100%", :controls => true) %>
          <% end %>
        </div>
         <% end %>
         <div class="pl-2 border-bottom">
           <a href = "/posts/<%= post.id %>"><%= post.body %></a>
         </div>
    
     <div class="pl-2 border-bottom">
      <%= link_to "#{post.favorites.count}件のいいね", post_favorites_path(post) %>
     </div>
     <div class="pl-2">
             <a href="/posts/<%= post.id %>"><i class="far fa-comment"></i></a>
    
      <% if post.favorited_by?(current_user) %>
         <%= link_to post_favorites_path(post), method: :delete do %>
          <i class="fas fa-heart"></i>
         <% end %>
      <% else %>
         <%= link_to post_favorites_path(post), method: :post do %>
          <i class="far fa-heart"></i>
         <% end %>
      <% end %>
     </div>
    </div>
     
   <% end %>
  </div>
    <%= paginate @posts %>
 </div>
</div>